<%= form_for @restaurant do |f| %>
  <% if @restaurant.errors.any? %>
    <div id="error">
      <strong><%= pluralize(@restaurant.errors.count, "error") %> prohibited this movie from being added:</strong>
      <ul>
      <% @restaurant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p>* Required Field</p>

  <div class="field">
    <%= f.label :name, "Name *" %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :address, "Address*" %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :city, "City *" %>
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <%= f.label :state, "State *" %>
    <%= f.text_field :state %>
  </div>

  <div class="field">
    <%= f.label :zip, "Zip *" %>
    <%= f.text_field :zip %> (5 digits)
  </div>

  <div class="field">
    <%= f.label :description, "Description" %>
    <%= f.text_area :description, cols: 30, rows: 5 %>
  </div>

  <div class="field">
    <%= f.label :category_ids, "Categories" %>
    <%= f.collection_check_boxes :category_ids, @category_collection, :id, :name %>
  </div>

  <div class="actions">
    <%= f.submit "Add Restaurant" %>
  </div>
<% end %>
